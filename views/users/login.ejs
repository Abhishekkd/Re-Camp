<% layout('layouts/boilerplate') %>

<!-- thats just how u get stuff inside div centered vertically and horizontally -> using flex,justify,align-->
<div class="container d-flex justify-content-center align-items-center mb-5 ">
    <!-- making grid -->
    <!-- flex-fill should be used on a series os sibling elements to force them into widths equal to their content
    while taking up  all available horizontal space -->
    <div class="row flex-fill ">
        <!-- col-md-6 means from medium and above i want it to be centered i.e 1/2 and offset it by three and on xl and above 1/3 -->
        <div class="col-md-6 offset-md-3 col-xl-5 offset-xl-4">
            <!-- added card class and gave it shadow -->
            <div class="card shadow bg-dark">
                <img src="https://images.unsplash.com/photo-1573455494060-c5595004fb6c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=840&q=80" alt="" class="card-img-top">
               <div class="card-body">
                <h4 class="card-title text-white">Login</h4>
                <form action="/login" method="POST" class="validated-form" novalidate>
                    <div class="mb-3">
                        <label class="form-label text-white" for="username">Username</label>
                        <input  class="form-control" type="text" id-"username" name="username" autofocus  required>
                        <div class="valid-feedback text-white">
                            Nicee!
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label text-white" for="password">Password</label>
                            <input  class="form-control" type="password" id-"password" name="password"  required>
                            <div class="valid-feedback text-white">
                                Nicee!
                            </div>
                        </div>
                        <button class="btn btn-success btn-block">Login</button>
                </form>
               </div>

            </div>
        </div>
    </div>
</div>
