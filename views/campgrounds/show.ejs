<!-- we'll be injecting this templates content to our boilerplate -->
<!-- this function is from ejs-mate -->
<!-- so this function is looking for everything in this template to pass that through as body to our boilerplate -->
<% layout('layouts/boilerplate') %> 
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%=campground.image %> " class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%=campground.title %></h5>
                  <p class="card-text"><%=campground.description %></p>
                </div>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item text-muted"><%=campground.location %></li>
                  <li class="list-group-item">$<%=campground.price %>/night</li>
                </ul>
                <div class="card-body">
                  <a href="/campgrounds/<%=campground._id%>/edit " class="card-link btn btn-warning">Edit</a>
                  <!-- as its a form its pushing its content on another line for it to be inline we'll use a bootstrap utility
                  it should make it an inline element -->
                  <form class="d-inline" action="/campgrounds/<%=campground._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete</button>
                </div>
                <div class="card-footer text-muted">
                    <a class="btn btn-success" href="/campgrounds">All Campgrounds</a>
                  </div>
              </div>
            
        </div>
    </div>